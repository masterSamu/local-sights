rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /sights/{sight} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }
  }
  
}